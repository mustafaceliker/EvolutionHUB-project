<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:id="@+id/layout_profile"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/profilgizlilik"
        android:layout_width="380dp"
        android:layout_height="35dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="12dp"
        android:fadeScrollbars="false"
        android:hapticFeedbackEnabled="true"
        android:text="Uygulamamızı kullandığınız takdirde kullanım ve gizlilik koşullarımızı kabul edersiniz."
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/profiltext"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="19dp"
        android:text="Profil Bilgileri"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/profilisim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profillogo" />

    <TextView
        android:id="@+id/profilmail"
        android:layout_width="630dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="20dp"
        android:text="E-posta Adresiniz"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/profilguncelle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilisim" />

    <TextView
        android:id="@+id/profilisim"
        android:layout_width="594dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="12dp"
        android:text="Adınız Soyadınız"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/profilmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profiltext" />

    <Button
        android:id="@+id/profilsil"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/buttonarkaplan"
        android:backgroundTint="@color/purple_200"
        android:text="Profili Sil"
        app:layout_constraintBottom_toTopOf="@+id/profilgizlilik"
        app:layout_constraintStart_toEndOf="@+id/profilcikisyap" />

    <Button
        android:id="@+id/profilguncelle2"
        android:layout_width="239dp"
        android:layout_height="62dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="149dp"
        android:background="@drawable/buttonarkaplan"
        android:backgroundTint="@color/purple_200"
        android:text="Bilgileri Güncelle"
        app:layout_constraintBottom_toTopOf="@+id/profilsil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilmail" />

    <Button
        android:id="@+id/profilcikisyap"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/buttonarkaplan"
        android:backgroundTint="@color/purple_200"
        android:text="Çıkış Yap"
        app:layout_constraintBottom_toTopOf="@+id/profilgizlilik"
        app:layout_constraintEnd_toStartOf="@+id/profilsil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilguncelle2"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/profillogo"
        android:layout_width="123dp"
        android:layout_height="108dp"
        android:layout_marginEnd="277dp"
        android:layout_marginBottom="7dp"
        android:contentDescription="@string/alt_hedef_ekle"
        app:layout_constraintBottom_toTopOf="@+id/profiltext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hublogo" />

</androidx.constraintlayout.widget.ConstraintLayout>
